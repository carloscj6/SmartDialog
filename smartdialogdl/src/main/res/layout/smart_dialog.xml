<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/dialog_bg"
        android:layout_marginBottom="7dp"
        android:layout_height="match_parent">
    <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            android:id="@+id/constraintInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:background="@drawable/circular_shape"
                android:indeterminateDuration="1000"
                android:indeterminateOnly="true"
                android:indeterminateDrawable="@drawable/circular_progress_bar"
                android:id="@+id/progressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Doing something"
                android:layout_width="wrap_content"
                android:id="@+id/textViewInfo"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <Button
            android:visibility="gone"
            android:backgroundTint="@color/colorGreenMaterial"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/constraintInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonNeutral"
            android:text="Positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPositive"
            android:minHeight="0dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="@style/buttonText"
            android:background="@drawable/button_bg"/>
    <Button
            android:visibility="gone"
            android:backgroundTint="@color/colorOrangeMaterial"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/constraintInfo"
            app:layout_constraintStart_toEndOf="@id/buttonPositive"
            app:layout_constraintEnd_toStartOf="@id/buttonNegative"
            android:text="Neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/buttonNeutral"
            android:textAppearance="@style/buttonText"
            android:background="@drawable/button_bg"/>
    <Button
            android:visibility="gone"
            android:backgroundTint="@color/colorRedMaterial"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/constraintInfo"
            app:layout_constraintStart_toEndOf="@id/buttonNeutral"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Negative"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNegative"
            android:minHeight="0dp"
            android:textAppearance="@style/buttonText"
            android:background="@drawable/button_bg"/>

</android.support.constraint.ConstraintLayout>